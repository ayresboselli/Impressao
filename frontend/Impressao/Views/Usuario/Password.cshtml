@model Impressao.Models.Usuario

@{
    ViewData["Title"] = "Senha";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Senha</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index">Usuários</a></li>
                    <li class="breadcrumb-item active">Senha</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="card">
            <div class="card-header">
                Novo usuário
            </div>
            <div class="card-body">

                <form asp-action="Password" method="post">
                    <input type="hidden" asp-for="Id" />

                    <div class="row mb-3">
                        <div class="col-sm-2">
                            <label>Id</label>
                            @Html.DisplayFor(m => m.Id)
                        </div>
                        <div class="col-sm-5">
                            <label>Nome</label>
                            @Html.DisplayFor(m => m.Nome)
                        </div>
                        <div class="col-sm-5">
                            <label>E-mail</label>
                            @Html.DisplayFor(m => m.Email)
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-sm-6">
                            <label for="Senha"><span class="text-danger">*</span> Nova senha</label>
                            <input type="password" asp-for="Senha" class="form-control form-control-sm" />
                        </div>
                        <div class="col-sm-6">
                            <label for="Email"><span class="text-danger">*</span> Repita a nova senha</label>
                            <input type="password" id="SenhaN" class="form-control form-control-sm">
                        </div>
                    </div>


                    <div class="text-right">
                        <button type="submit" class="btn btn-success">Salvar</button>
                    </div>
                </form>

            </div>
        </div>
    </div>
</section>
