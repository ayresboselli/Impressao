@model Impressao.Models.Usuario

<div class="row mb-3">
    <div class="col-sm-2">
        <label asp-for="Id"></label>
        <input type="number" asp-for="Id" onchange="ValidaId(this.value)" class="form-control form-control-sm" readonly />
    </div>
    <div class="col-sm-8">
        <label for="Nome"><span class="text-danger">*</span> Nome</label>
        <input type="text" asp-for="Nome" class="form-control form-control-sm" required>
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="col-sm-2">
        <div class="mt-4 pt-2">
            <div class="form-check">
                <input type="checkbox" class="form-check-input" asp-for="Ativo">
                <label asp-for="Ativo"></label>
            </div>
        </div>
    </div>
</div>

<div class="row mb-3">
    <div class="col-sm-4">
        <label for="Login"><span class="text-danger">*</span> Login</label>
        <input type="text" asp-for="Login" class="form-control form-control-sm" required/>
        <span asp-validation-for="Login" class="text-danger"></span>
    </div>
    <div class="col-sm-8">
        <label for="Email"><span class="text-danger">*</span> E-mail</label>
        <input type="text" asp-for="Email" class="form-control form-control-sm" required>
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
</div>

<input type="hidden" id="usuarioPerfis" name="usuarioPerfis" />
<table class="table table-sm table-bordered table-striped">
    <thead>
        <tr>
            <th></th>
            <th>Perfil</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Perfil perfil in ViewBag.perfis)
        {
            <tr>
                <td><input type="checkbox" class="usuarioPerfis" value="@perfil.Id" onchange="UsuarioPerfis()" @(perfil.UsuarioPerfis != null && perfil.UsuarioPerfis.Count > 0 ? "checked" : "") /></td>
                <td>@perfil.Titulo</td>
            </tr>
        }
    </tbody>
</table>

<div class="text-right">
    <button type="submit" class="btn btn-success">Salvar</button>
</div>