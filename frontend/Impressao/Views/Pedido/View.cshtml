@model Impressao.Models.Pedido

@{
    ViewData["Title"] = "Pedido";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-left">
                    <li class="mr-4"><h1 class="m-0">Pedido</h1></li>
                </ol>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="breadcrumb-item active"><a asp-action="Index">Pedidos</a></li>
                    <li class="breadcrumb-item active">Pedido</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="card">
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-sm-2">
                        <input type="hidden" asp-for="Id"/>
                        <label>Id:</label> @Html.DisplayFor(Pedido => Pedido.Id)
                    </div>
                    <div class="col-sm-8">
                        <label>Cliente:</label> @Html.DisplayFor(Pedido => Pedido.Cliente.Id) - @Html.DisplayFor(Pedido => Pedido.Cliente.NomeFantasia)
                    </div>
                    <div class="col-sm-2">
                        <label>Contrato:</label> @Html.DisplayFor(Pedido => Pedido.Contrato)
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-sm-4">
                        <label>Data de entrada:</label> @Html.DisplayFor(Pedido => Pedido.DataEntrada)
                    </div>
                    <div class="col-sm-4">
                        <label>Previsão de entrega:</label> @Html.DisplayFor(Pedido => Pedido.PrevisaoEntrega)
                    </div>
                    <div class="col-sm-4">
                        <label>Data de finalização:</label> @Html.DisplayFor(Pedido => Pedido.DataFinalizado)
                    </div>
                </div>

                <div class="form-group">
                    <label>Observações:</label><br />
                    <pre>@Html.DisplayFor(Pedido => Pedido.Observacoes)</pre>
                </div>

                <div class="card">
                    <div class="card-header">
                        Itens
                    </div>
                    <div class="card-body">
                        <table class="table table-sm table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Produto</th>
                                    <th>Cópias</th>
                                    <th>Arquivos</th>
                                    <th>Index</th>
                                    <th>Situação</th>
                                </tr>
                            </thead>
                            <tbody id="tbItens"></tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script type="text/javascript" src="~/js/pedido/edit.js"></script>