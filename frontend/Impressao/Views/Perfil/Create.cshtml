@model Impressao.Models.Perfil

@{
    ViewData["Title"] = "Perfis";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Perfis</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index">Perfis</a></li>
                    <li class="breadcrumb-item active">Perfil</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="card">
            <div class="card-body">
                <form asp-action="Edit" method="post">
                    <div class="row">
                        <div class="col-sm-4">
                            <div class="form-group">
                                <label asp-for="Id"></label>
                                <input type="number" asp-for="Id" onchange="ValidaId(this.value)" class="form-control form-control-sm" readonly />
                            </div>
                        </div>

                        <div class="col-sm-8">
                            <div class="form-group">
                                <label for="Titulo"><span class="text-danger">*</span> Titulo</label>
                                <input type="text" asp-for="Titulo" class="form-control form-control-sm" required />
                                <span asp-validation-for="Titulo" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <input type="hidden" id="perfilFuncoes" name="perfilFuncoes" />
                    <table class="table table-sm table-bordered table-striped">
                        <thead>
                            <tr>
                                <th></th>
                                <th>Chave</th>
                                <th>Descrição</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Funcao funcao in ViewBag.funcoes)
                            {
                                <tr>
                                    <td><input type="checkbox" class="perfilFuncoes" value="@funcao.Id" onchange="PerfilFuncoes()" @(funcao.PerfilFuncoes != null && funcao.PerfilFuncoes.Count > 0 ? "checked" : "") /></td>
                                    <td>@funcao.Chave</td>
                                    <td>@funcao.Titulo</td>
                                </tr>
                            }
                        </tbody>
                    </table>

                    <div class="text-right">
                        <button type="submit" class="btn btnm btn-success">Salvar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

<script src="~/js/perfil/edit.js"></script>